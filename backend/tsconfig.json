{
    "compilerOptions": {
      /* Base Options: */
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "es2022",
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "isolatedModules": true,
  
      /* Strictness */
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "checkJs": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
  
      /* Node.js/Express specific */
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "outDir": "dist",
      "rootDir": "src",
      
      /* Basic libraries for Node.js */
      "lib": [
        "ES2022"
      ],

     /* Path aliases (optional) */
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "./src/*"
        ]
      }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ],
    "ts-node": {
      "esm": true
    }
}
